{% extends "base.html.twig" %}

{% block title %}Create New Note{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h1 class="h2 mb-4">üìù Create New Note</h1>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.title, 'Title') }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Enter note title'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.content, 'Content') }}
                            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 8, 'placeholder': 'Enter note content'}}) }}
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('note_index') }}" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save Note</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

